<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ios"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/tv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/img_back" />

        <TextView
            android:id="@+id/home_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/tv_manage_count"
            android:textColor="@color/title_background"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/grid_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <View
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/weibo_app_bar_text" />
    </RelativeLayout>

    <View
        android:id="@+id/ImageView01"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@color/weibo_app_bar_text" />

    <com.thinksns.sociax.thinksnsbase.activity.widget.LoadingView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:id="@+id/rl_bind_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginTop="@dimen/padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_managecount_mobile"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_manageCount_count_mobile"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/tv_manageCount_count_mobile"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tv_count_phone" />

                    <TextView
                        android:id="@+id/tv_manageCount_count_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/iv_managecount_mobile"
                        android:gravity="center"
                        android:text="@string/tv_count_mobile"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_bind_phone"
                        android:layout_width="50dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/roundbackground_gray"
                        android:gravity="center"
                        android:text="绑定"
                        android:textSize="12sp"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/bg_listview_divider" />

                <RelativeLayout
                    android:id="@+id/rl_bind_sina"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginTop="@dimen/padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_managecount_sina"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_manageCount_count_sina"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/tv_manageCount_count_sina"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tv_count_weibo"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:id="@+id/tv_manageCount_count_sina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/iv_managecount_sina"
                        android:gravity="center_vertical"
                        android:text="@string/tv_count_sina"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_bind_sina"
                        android:layout_width="50dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/roundbackground_gray"
                        android:gravity="center"
                        android:text="绑定"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/bg_listview_divider" />

                <RelativeLayout
                    android:id="@+id/rl_bind_qq"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginTop="@dimen/padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_managecount_qq"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_manageCount_count_qq"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/tv_manageCount_count_qq"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tv_count_qq"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:id="@+id/tv_manageCount_count_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/iv_managecount_qq"
                        android:gravity="center_vertical"
                        android:text="@string/tv_count_qq"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_bind_qq"
                        android:layout_width="50dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/roundbackground_gray"
                        android:gravity="center"
                        android:text="绑定"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/bg_listview_divider" />

                <RelativeLayout
                    android:id="@+id/rl_bind_weichat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginTop="@dimen/padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_managecount_weichat"
                        android:layout_width="21dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_manageCount_count_weichat"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/tv_manageCount_count_weichat"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tv_count_weichat"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:id="@+id/tv_manageCount_count_weichat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/iv_managecount_weichat"
                        android:gravity="center_vertical"
                        android:text="@string/tv_count_weichat"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_bind_weichat"
                        android:layout_width="50dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/roundbackground_gray"
                        android:gravity="center"
                        android:text="绑定"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/ImageView02"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/weibo_app_bar_text" />

            <View
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/weibo_app_bar_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:id="@+id/rl_change_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginTop="@dimen/padding"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_count_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/tv_count_change"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_count_change"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_count_change"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/ImageView03"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/weibo_app_bar_text" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>