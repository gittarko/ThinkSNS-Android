        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_top_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_findpeople_area"
                android:gravity="center"
                android:text="地区"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_size_14" />

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_findpeople_tag"
                android:gravity="center"
                android:text="标签"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_size_14" />

            <TextView
                android:id="@+id/tv_auther"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_findpeople_vip"
                android:gravity="center"
                android:text="认证"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_size_14" />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_findpeople_maillist"
                android:gravity="center"
                android:text="通讯录"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_listview_divider" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/bg_ios"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="可能感兴趣的人"
        android:textColor="@color/gray"
        android:textSize="@dimen/dimen_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_listview_divider" />

    <FrameLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_listview_divider" />

    <Button
        android:id="@+id/buttononrefresh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_gravity="center"
        android:background="@drawable/btn_press_selector"
        android:text="换一换"
        android:textColor="@color/bar"
        android:textSize="14sp" />

</LinearLayout>