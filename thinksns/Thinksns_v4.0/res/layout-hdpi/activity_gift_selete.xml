<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ios"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="#FFFFFF"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:text="@string/tv_selete_firend"
            android:textColor="@color/title_background"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_title_center"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/tv_title_center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:background="@drawable/img_back"
            android:textSize="@dimen/title_leftandright_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/title_margin_right"
            android:text="@string/tv_selete_send"
            android:textColor="@color/title_blue"
            android:textSize="@dimen/title_leftandright_size"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/find_bg1"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search_1" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_face_sel"
            android:ems="10"
            android:hint="搜索联系人"
            android:textSize="16sp"
            android:textColorHint="#44202020"
            android:singleLine="true" />
    </LinearLayout>

    <com.zhishisoft.v4.android.unit.AutoListView
        android:id="@+id/lv_test"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.44"
        android:fadingEdge="none"
        android:visibility="gone" >
    </com.zhishisoft.v4.android.unit.AutoListView>

</LinearLayout>