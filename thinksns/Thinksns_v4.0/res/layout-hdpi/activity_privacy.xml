<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ios"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/RelativeLayout02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/tv_privacy_sixin"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/ImageView02"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_padding"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_privacy_admit_all_sixin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/tv_privacy_admit_all_sixin"
                        android:textColor="@color/bar"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/tv_sixin_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_alignBottom="@+id/tv_privacy_admit_all_sixin"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_privacy_admit_all_sixin"
                        android:layout_centerVertical="true"
                        android:button="@drawable/custom_setting_checkbox"
                        android:gravity="center" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#cccccc" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_padding"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_privacy_admit_follow_sixin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/tv_privacy_admit_follow_sixin"
                        android:textColor="@color/bar"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/tv_sixin_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_alignBottom="@+id/tv_privacy_admit_follow_sixin"
                        android:layout_alignParentRight="true"
                        android:button="@drawable/custom_setting_checkbox"
                        android:layout_alignTop="@+id/tv_privacy_admit_follow_sixin"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/ImageView04"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/rl_change_pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/tv_privacy_comment"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/ImageView03"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <RelativeLayout
                    android:id="@+id/ll_re_pass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_padding"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_privacy_admit_all_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/tv_privacy_admit_all_comment"
                        android:textColor="@color/bar"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/tv_comment_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_alignBottom="@+id/tv_privacy_admit_all_comment"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_privacy_admit_all_comment"
                        android:button="@drawable/custom_setting_checkbox"
                        android:layout_centerVertical="true"
                        android:gravity="center" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#cccccc" />

                <RelativeLayout
                    android:id="@+id/rl_pravicy_manage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_padding"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_privacy_admit_all_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/tv_privacy_admit_all_follow"
                        android:textColor="@color/bar"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/tv_comment_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_alignBottom="@+id/tv_privacy_admit_all_follow"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_privacy_admit_all_follow"
                        android:button="@drawable/custom_setting_checkbox"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/ImageView06"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/RelativeLayout05"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/tv_privacy_space"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/ImageView05"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout04"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_padding"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_privacy_admit_space_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/tv_privacy_admit_space_all"
                        android:textColor="@color/bar"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/tv_space_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_alignBottom="@+id/tv_privacy_admit_space_all"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_privacy_admit_space_all"
                        android:button="@drawable/custom_setting_checkbox"
                        android:layout_centerVertical="true"
                        android:gravity="center" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#cccccc" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout06"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/my_padding"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_privacy_admit_space_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/tv_privacy_admit_space_follow"
                        android:textColor="@color/bar"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/tv_space_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_alignBottom="@+id/tv_privacy_admit_space_follow"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_privacy_admit_space_follow"
                        android:button="@drawable/custom_setting_checkbox"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/ImageView01"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>