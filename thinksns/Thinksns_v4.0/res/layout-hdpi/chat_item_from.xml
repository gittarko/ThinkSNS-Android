<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_item_img"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/chat_itme_from_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#cccccc"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:text="2012-3-22"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/chat_itme_from_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/default_user" />

        <TextView
            android:id="@+id/chat_itme_from_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/chat_itme_from_logo"
            android:background="@drawable/chat_item_from_bg"
            android:text="ffffffff"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/chat_yuyin_ta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/chat_itme_from_logo"
            android:src="@drawable/chat_yuyin_ta2x"
            android:visibility="gone" />

        <com.thinksns.sociax.t4.android.image.SmartImageView
            android:id="@+id/picofphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/chat_itme_from_logo"
            android:background="@null"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>