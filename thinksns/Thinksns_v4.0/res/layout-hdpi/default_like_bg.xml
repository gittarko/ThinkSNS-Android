<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/default_personal_share_bg"
    android:visibility="visible"
    android:orientation="horizontal"
    android:gravity="center">

    <Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_default_bg"
            android:layout_width="310dp"
            android:layout_height="310dp"
            android:src="@drawable/bg_default_like"
            android:scaleType="centerInside"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_empty_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/iv_default_bg"
            android:layout_marginTop="-12dp"
            android:gravity="center"
            android:text="快去添加您喜欢的东西"
            android:textSize="@dimen/dimen_size_14"
            android:textColor="@color/gray"/>
    </RelativeLayout>

    <Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>