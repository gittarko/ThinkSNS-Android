<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/default_personal_share_bg"
    android:visibility="visible"
    android:orientation="horizontal"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_empty_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/empty_content"
            android:textSize="@dimen/dimen_size_14"
            android:textColor="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/iv_default_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_empty_content"
            android:src="@drawable/ic_no_yh"
            android:scaleType="centerInside"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
    </RelativeLayout>


</LinearLayout>