<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/default_nomedal_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:id="@+id/iv_default_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_no_xz"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_empty_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_default_bg"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/empty_medal"
        android:textColor="@color/empty_color"
        android:textSize="@dimen/dimen_size_14" />

</LinearLayout>