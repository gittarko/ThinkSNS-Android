<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp" >

        <ImageView
            android:id="@+id/document_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/pdf" />

                <ImageButton
                    android:id="@+id/document_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/arrow"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/document_type"
                    android:layout_toRightOf="@+id/document_type"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/document_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Large Text"
                        android:textColor="@color/main_fant_color"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/docment_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.222 kb"
                            android:textColor="@color/main_fant_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/document_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="2012-05-15"
                            android:textColor="@color/main_fant_color"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

</RelativeLayout>