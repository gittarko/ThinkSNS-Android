        <TextView
            android:id="@+id/tv_gift_2_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_blue" />

    </LinearLayout>

    <LinearLayout
        
        android:id="@+id/ll_gift_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
