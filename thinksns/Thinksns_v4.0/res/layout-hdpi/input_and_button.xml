<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_ios"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp" >

        <!-- android:drawableLeft="@drawable/icon_search_32" -->

        <EditText
            android:id="@+id/input_edit"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:cursorVisible="true"
            android:drawablePadding="5dp"
            android:background="@drawable/roundbackground_white"
            android:ellipsize="end"
            android:hint="@string/search_key"
            android:textColorHint="@color/edit_hint"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/bar"
            android:textSize="16sp" >
        </EditText>

        <ImageButton
            android:id="@+id/clear_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/input_edit"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:src="@drawable/button_del"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/go_for_search"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/input_edit"
        android:background="@drawable/tv_login_bt"
        android:text="@string/search"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>