<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_ios"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_copy_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="带勋章，或者卡片的任务"
                android:textColor="@color/bg_task_name"
                android:textSize="@dimen/txt_size_task_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_copy_task_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_task_complete"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_copy_task_complete_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="已完成"
                    android:textColor="@color/bg_task_complete_state_blue_txt"
                    android:textSize="@dimen/txt_size_task_complete_state" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_copy_task_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="顺丰速递"
            android:textColor="@color/bg_task_detail"
            android:textSize="@dimen/txt_size_task_detail" />

        <TextView
            android:id="@+id/tv_copy_task_detail_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="奖励：经验值+6点 财富值+6点"
            android:textColor="@color/bg_task_detail"
            android:textSize="@dimen/txt_size_task_detail" />

        <TextView
            android:id="@+id/tv_copy_task_last_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="无限领取"
            android:textColor="@color/bg_task_detail"
            android:textSize="@dimen/txt_size_task_detail" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="条件："
            android:textColor="@color/bg_task_detail"
            android:textSize="@dimen/txt_size_task_detail" />

        <LinearLayout
            android:id="@+id/ll_copy_task_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical" />
    </LinearLayout>

</RelativeLayout>