<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_my_score_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="个人主页被访问"
            android:textColor="@color/bg_gift_exchange_rule"
            android:textSize="@dimen/txt_size_gift_name" />

        <TextView
            android:id="@+id/tv_my_score_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2015-09-10 17:20:55"
            android:textColor="@color/bg_task_detail"
            android:textSize="@dimen/txt_size_gift_activity_my_detail" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_score_detail_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="+2"
        android:textColor="@color/bg_my_score_source_score"
        android:textSize="@dimen/txt_size_gift_activity_my_score_list_score" />

</RelativeLayout>