<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/padding" >

    <TextView
        android:id="@+id/tv_score_rule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="4dp"
        android:text="推荐至频道"
        android:textColor="@color/bg_gift_exchange_rule"
        android:textSize="@dimen/txt_size_gift_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="4dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_score_rule_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分+1"
            android:textColor="@color/bg_gift_exchange_rule"
            android:textSize="@dimen/txt_size_gift_detail" />

        <TextView
            android:id="@+id/tv_score_rule_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="经验+1"
            android:textColor="@color/bg_gift_exchange_rule"
            android:textSize="@dimen/txt_size_gift_detail" />
    </LinearLayout>

</RelativeLayout>