<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000">

    <RadioGroup
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/tv_all_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="全部礼物"
            android:paddingLeft="10dp"
            android:checked="true"
            android:button="@drawable/gift_btn_bg"
            android:textColor="@drawable/gift_btn_text_color"
            style="@android:style/Theme.Holo.Dialog"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/bg_ios" />

        <RadioButton
            android:id="@+id/tv_entity_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:button="@drawable/gift_btn_bg"
            android:textColor="@drawable/gift_btn_text_color"
            android:text="实体礼物"
            style="@android:style/Theme.Holo.Dialog"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/bg_ios" />

        <RadioButton
            android:id="@+id/tv_virtual_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/gift_btn_bg"
            android:paddingLeft="26dp"
            android:textColor="@drawable/gift_btn_text_color"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="虚拟礼物"
            style="@android:style/Theme.Holo.Dialog" />

    </RadioGroup>

</RelativeLayout>