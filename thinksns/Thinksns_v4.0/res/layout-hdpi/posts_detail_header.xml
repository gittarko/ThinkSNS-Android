<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/im_post_head"
            android:layout_width="@dimen/header_width_hight"
            android:layout_height="@dimen/header_width_hight"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:src="@drawable/default_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
             >

            <TextView
                android:id="@+id/tv_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="V3每日进展通报展通展通展通展通展通展通"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                  <ImageView
                    android:id="@+id/im_post_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/post_top1" />
                
                <ImageView
                    android:id="@+id/im_post_digest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/im_post_top"
                    android:src="@drawable/post_digest" />
                
                <TextView
                    android:id="@+id/tv_post_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_toRightOf="@+id/im_post_digest"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="物语"
                    android:textColor="@color/weiba_txt"
                    android:textSize="14dp" />

               <ImageView
		            android:id="@+id/tv_post_v"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="4dp"
		            android:layout_toRightOf="@+id/tv_post_author"
		            android:src="@drawable/v" />

                  <ImageView
		             android:id="@+id/tv_post_c_v"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_centerVertical="true"
		             android:layout_marginRight="4dp"
		             android:layout_toRightOf="@+id/tv_post_v"
		             android:src="@drawable/c_v" />
                 
                <TextView
                    android:id="@+id/tv_post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:text="发表于 11月12日 10:43"
                    android:textColor="@color/weiba_txt" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_post_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="物语物语物语物语物语物语物语物语物语物语物语物语物语物语物语物语物语"
        android:textColor="@color/black" 
        android:visibility="gone"/>
    <WebView 
        android:id="@+id/wb_post_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        />

</LinearLayout>