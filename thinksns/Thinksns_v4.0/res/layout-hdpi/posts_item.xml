<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="V3每日进展通报"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/tv_post_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/post_top1" />

        <ImageView
            android:id="@+id/tv_post_digest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/tv_post_top"
            android:src="@drawable/post_digest" />

        <TextView
            android:id="@+id/tv_post_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@+id/tv_post_digest"
            android:text="物语"
            android:textColor="@color/weiba_txt"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/tv_post_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/tv_post_author"
            android:src="@drawable/v" />
        
         <ImageView
             android:id="@+id/tv_post_c_v"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginRight="4dp"
             android:layout_toRightOf="@+id/tv_post_v"
             android:src="@drawable/c_v" />

        <TextView
            android:id="@+id/tv_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/tv_post_count"
            android:lines="1"
            android:text="1小时前"
            android:textColor="@color/weiba_txt"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_post_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/post_count_bg"
            android:gravity="center"
            android:text="999"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </RelativeLayout>

</LinearLayout>