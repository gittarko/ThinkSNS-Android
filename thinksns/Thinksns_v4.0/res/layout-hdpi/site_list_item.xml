<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/site_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/site_logo"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginBottom="@dimen/body_margin_left"
        android:layout_marginLeft="@dimen/body_margin_left"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/site_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:cursorVisible="false"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/site_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/body_margin_left"
            android:layout_marginTop="2dp"
            android:cursorVisible="false"
            android:text="TextView"
            android:textColor="@color/tranFontColor"
            android:textSize="@dimen/commentSize" />
    </LinearLayout>

</LinearLayout>