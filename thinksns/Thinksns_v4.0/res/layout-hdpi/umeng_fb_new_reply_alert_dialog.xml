<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/umeng_fb_gray_frame"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/umeng_fb_new_reply_alert_title"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/umeng_fb_bar_bg"
            android:gravity="center"
            android:text="@string/UMNewReplyAlertTitle"
            android:textColor="#565656"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/umeng_fb_new_dev_reply_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:minHeight="110dip"
            android:text="This is the reply from dev"
            android:textColor="#6F6F6F"
            android:textSize="19dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:layout_marginBottom="1dip"
            android:layout_marginTop="3dip"
            android:background="#E5E5E5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="1dip"
            android:background="#E0E0E0"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/umeng_fb_exitBtn"
                android:layout_width="80dip"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/umeng_fb_submit_selector"
                android:text="@string/UMFeedbackGotIt"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/umeng_fb_see_detail_btn"
                android:layout_width="80dip"
                android:layout_height="45dip"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="@drawable/umeng_fb_submit_selector"
                android:text="@string/UMFeedbackSeeDetail"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>