<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ios"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.08"
        android:orientation="vertical" >

        <com.thinksns.sociax.thinksnsbase.activity.widget.LoadingView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >
        </com.thinksns.sociax.thinksnsbase.activity.widget.LoadingView>

        <com.thinksns.sociax.component.CommentList
            android:id="@+id/list_comment"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:layout_weight="1.89"
            android:visibility="visible" >
        </com.thinksns.sociax.component.CommentList>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_manage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:divider="@drawable/nav_line"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:showDividers="middle"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/rl_weibo_transport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_weibo_transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/ic_more_forward"
                android:gravity="center_horizontal"
                android:text="@string/transpond" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_weibo_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_weibo_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/tv_weibodetail_comment"
                android:gravity="center_horizontal"
                android:text="@string/comment" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_weibo_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_weibo_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/ic_more_collect"
                android:gravity="center_horizontal"
                android:text="@string/tv_weibo_collect" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_weibo_digg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_weibo_digg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/tv_weibodetail_notdigg"
                android:gravity="center_horizontal"
                android:text="@string/tv_weibo_digg" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>