<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/bg_ios">
    <!-- 选项卡 -->
    <RadioGroup
        android:id="@+id/rg_userinfo"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_home"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@null"
                android:button="@null"
                android:gravity="center"
                android:text="@string/tv_user_info_home"
                android:textColor="@color/title_black"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:background="@color/weibo_app_bar_text"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_weibo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/weibo"
                android:textColor="@color/title_blue"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:background="@color/weibo_app_bar_text"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_album"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:button="@null"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/tv_user_info_album"
                android:textColor="@color/title_black"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0.35dp"
        android:background="@color/bg_listview_divider"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/v_home"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/title_blue"
                android:visibility="invisible"/>
        </LinearLayout>

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:background="@color/weibo_app_bar_text"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/v_share"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/title_blue"
                android:visibility="invisible"/>
        </LinearLayout>

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:background="@color/weibo_app_bar_text"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/v_ablume"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/title_blue"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>